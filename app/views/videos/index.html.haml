-@categories.each do |category|
  -unless category.has_no_videos?
    %article.video_category 
      %header
        %h3= link_to category.label.pluralize, category
      .videos.row
        - category.recent_videos.each do |video|
          .video.col-sm-2
            = link_to video do
              %img(src="/tmp/#{video.small_cover_url}")